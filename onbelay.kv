Screen:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'

        Image:
            source: 'images/OnBelay.png'
            size_hint: None, None
            size: 250,250

    GridLayout:
        orientation: 'vertical'
        
        Label:
            id: welcome
            text: 'Welcome!'
            font_size: 45
            text_size: 275, 250

        BoxLayout:
            orientation: 'horizontal'
            text: 'How are you feeling today?'
            height: 0.25
            padding: 1
            spacing: 1

            Button:
                id: very happy
                background_normal: 'images/Smiling.png'
            Button:
                id: happy
                background_normal: 'images/SlightlySmiling.png'
            Button:
                id: neutral
                background_normal: 'images/Neutral.png'
            Button:
                id: sad
                background_normal: 'images/Sad.png'
            Button:
                id: very sad
                background_normal: 'images/VerySad.png'
            Button:
                id: angry
                background_normal: 'images/Angry.png'
            Button:
                id: very angry
                background_normal: 'images/VeryAngry.png'

        BoxLayout:
            Button:
                id: dashboard
                text: 'Dashboard'
                background_normal: 'images/RedButton.png'
                size_hint: (0.25, 0.25)
                border: (2, 2, 2, 2)
                markup: True
